@using MVCStokProje.Models.Entity
@model List<TBLURUN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<table id="tbl1" class=" table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.URUNID</th>
                <td>@urn.URUNAD</td>
                <td>@urn.MARKA</td>
                <td>@urn.TBLKATEGORİ.KATEGORIAD</td>
                <td>@urn.FİYAT</td>
                <td>@urn.STOK</td>
                <td><a href="/Urun/Sil/@urn.URUNID" class=" btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@urn.URUNID" class=" btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href=" /Urun/UrunEkle/" class=" btn btn-primary">Ürün Ekle</a>
<script type=" text/javascript" src="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable();
</script>