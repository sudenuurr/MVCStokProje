@model MVCStokProje.Models.Entity.TBLURUN
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<form method="post" class=" form-group">
    <div>
        <label>Ürün Ad</label>
        <input type="text" class=" form-control" name="URUNAD" required="" maxlength="50"/>
    </div>
    <div style="margin-top:15px">
        <label>Marka</label>
        <input type="text" class=" form-control" name="MARKA" required="" />
    </div>
    <div style="margin-top:15px">
        <label>Ürün Kategori</label>
        @Html.DropDownListFor(m => m.TBLKATEGORİ.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Fiyat</label>
        <input type="text" class=" form-control" name="FİYAT" />
    </div>
    <div style="margin-top:15px">
        <label>Stok</label>
        <input type="text" class=" form-control" name="STOK" />
    </div>
    <div style="margin-top:20px">
        <button class=" btn btn-info">Ürün Ekle</button>
    </div>

</form>

